.side_bar
  .side_bar__user-name
    .side_bar__user-name__name
      .side_bar__user-name__name__left-name
        = current_user.name
      .side_bar__user-name__name__right-icon
        = link_to new_group_path do
          = fa_icon 'edit', class: 'icon'
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
          //= icon('fas', 'cog', class: 'icon')
  .side_bar__group-lists
    - current_user.groups.each do |group|
      .side_bar__group-lists__list
        = link_to group_messages_path(group) do
          .side_bar__group-lists__list__group-name
            = group.name
          .side_bar__group-lists__list__group-message
            壱の型 
      .side_bar__group-lists__list
        = link_to  group_messages_path(group) do
          .side_bar__group-lists__list__group-name
            = group.name
          .side_bar__group-lists__list__group-message
            弐の型 
      