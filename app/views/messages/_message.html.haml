
.main_chat__message-list__message
  .main_chat__message-list__message__info
    .main_chat__message-list__message__info__user-name
      = message.user.name
    .main_chat__message-list__message__info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main_chat__message-list__message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?